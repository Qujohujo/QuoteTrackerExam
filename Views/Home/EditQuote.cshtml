@{
}

@model Quote
<!--form to edit quote-->
<form method="post" asp-action="EditQuote">
    <div class="form-group">

        <input type="hidden" asp-for="QuoteId" value="@Model.QuoteId" />

        <label asp-for="Text"></label>
        <input class="form-control" type="text" asp-for="Text" />

        <label asp-for="AuthorFirstName">Author First Name</label>
        <input class="form-control" type="text" asp-for="AuthorFirstName" />

        <label asp-for="AuthorLastName">Author Last Name</label>
        <input class="form-control" type="text" asp-for="AuthorLastName" />

        <label asp-for="Date"></label>
        <input class="form-control" type="date" asp-for="Date" />

        <label asp-for="Subject"></label>
        <input class="form-control" type="text" asp-for="Subject" />

        <label asp-for="Citation"></label>
        <input class="form-control" type="text" asp-for="Citation" />

    </div>
    <button class="btn btn-light" asp-action="EditQuote">Submit</button>
    <div asp-validation-summary="All"></div>
</form>